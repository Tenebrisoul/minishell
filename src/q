char **fetch_env_item(char *item_name)
{
    char **env_item;

    env_item = alloc(2 * sizeof(char *));
    if (!env_item)
        return (NULL);
    env_item[0] = alloc(len(item_name) * sizeof(char));
    if (!env_item[0])
        return (NULL);
    env_item[0] = item_name;
    env_item[1] = getenv(item_name);
    if (!env_item[1])
        return (NULL);
    return (env_item);
}